        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ch13" />

    <CheckBox
        android:id="@+id/ch17"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Ruminations"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        android:translationX="-2000px"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/ch19"
        app:layout_constraintEnd_toStartOf="@+id/ch18"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ch15" />

    <CheckBox
        android:id="@+id/ch19"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Stomatch Swelling"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        android:translationX="-2000px"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ch17" />

    <Button
        android:id="@+id/check"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/darkBlue"
        android:fontFamily="@font/poppins"
        android:text="Check"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:translationX="2000px"
        android:visibility="visible"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ch19"
        app:layout_constraintTop_toBottomOf="@+id/ch18" />

    <CheckBox
        android:id="@+id/ch18"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Rapid Pulse"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        android:translationX="2000px"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ch17"
        app:layout_constraintTop_toBottomOf="@+id/ch16" />

    <CheckBox
        android:id="@+id/ch16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Lameness"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        android:translationX="2000px"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/ch18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ch15"
        app:layout_constraintTop_toBottomOf="@+id/ch14" />

    <CheckBox
        android:id="@+id/ch14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Sudden Death"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        android:translationX="2000px"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/ch16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ch13"
        app:layout_constraintTop_toBottomOf="@+id/ch12" />

    <CheckBox
        android:id="@+id/ch12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Swollen Hoof"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        android:translationX="2000px"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/ch14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ch11"
        app:layout_constraintTop_toBottomOf="@+id/ch10" />

    <CheckBox
        android:id="@+id/ch10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Swollen Teats"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        android:translationX="2000px"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/ch12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ch9"
        app:layout_constraintTop_toBottomOf="@+id/ch8" />

    <CheckBox
        android:id="@+id/ch8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Breathing Difficulty"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        android:translationX="2000px"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/ch10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ch7"
        app:layout_constraintTop_toBottomOf="@+id/ch6" />

    <CheckBox
        android:id="@+id/ch6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Distress"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        android:translationX="2000px"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/ch8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ch5"
        app:layout_constraintTop_toBottomOf="@+id/ch4" />

    <CheckBox
        android:id="@+id/ch4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Low Appetite"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        android:translationX="2000px"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/ch6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ch3"
        app:layout_constraintTop_toBottomOf="@+id/ch2" />

    <CheckBox
        android:id="@+id/ch3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Weakness"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        android:translationX="-2000px"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/ch5"
        app:layout_constraintEnd_toStartOf="@+id/ch4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ch1" />

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:translationX="-2000px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:tint="@color/text_color"
            app:srcCompat="@drawable/ic_back" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="CHECK DISEASE"
            android:textColor="@color/text_color"
            android:textSize="30sp"
            android:translationY="0px" />
    </LinearLayout>

    <TextView
        android:id="@+id/select"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:paddingLeft="3dp"
        android:paddingTop="3dp"
        android:paddingRight="3dp"
        android:paddingBottom="3dp"
        android:text="Select Symptoms and click Check"
        android:textColor="@color/darkBlue"
        android:textSize="18sp"
        android:translationX="2000px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <androidx.cardview.widget.CardView
        android:id="@+id/diseaseCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:translationY="2000px"
        app:cardBackgroundColor="#caf7e3"
        app:cardCornerRadius="20dp"
        app:cardElevation="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/diseaseLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieAnimationView15"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="150dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:alpha="0.75"
                android:scaleType="fitEnd"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_fileName="doctor.json"
                app:lottie_loop="true" />

            <ImageView
                android:id="@+id/previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:tint="@color/text_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/medicineName"
                app:srcCompat="@drawable/ic_back" />

            <LinearLayout
                android:id="@+id/linearLayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/poppins_bold"
                    android:text="Expected Disease : "
                    android:textColor="@color/text_color"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/diseaseName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:fontFamily="@font/poppins"
                    android:text="DiseaseName"
                    android:textColor="@color/darkBlue"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView24"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Medicines"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout7" />

            <TextView
                android:id="@+id/medicineName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppins"
                android:text="1. Medicine 1\n2. Medicine 2\n3. Medicine 3"
                android:textColor="@color/darkBlue"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView24" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Go Back"
                android:textColor="@color/text_color"
                app:layout_constraintBottom_toBottomOf="@+id/previous"
                app:layout_constraintStart_toEndOf="@+id/previous"
                app:layout_constraintTop_toTopOf="@+id/previous" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>