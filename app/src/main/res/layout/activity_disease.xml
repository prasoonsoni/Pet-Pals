        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/ch7"
        app:layout_constraintEnd_toStartOf="@+id/ch6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
